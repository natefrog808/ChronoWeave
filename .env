# Base URLs for different environments
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_STAGING_URL=https://staging.chronoweave.app
NEXT_PUBLIC_PROD_URL=https://chronoweave.app

# Feature Flags (true/false)
NEXT_PUBLIC_ENABLE_ZOOM=false          # Enable timeline zooming
NEXT_PUBLIC_ENABLE_PARADOX_RESOLUTION=false  # Auto-resolve paradoxes
NEXT_PUBLIC_SHOW_DEBUG_PANEL=false     # Show simulation debug info
NEXT_PUBLIC_ENABLE_ANIMATIONS=true     # Enable UI animations

# API Configuration
NEXT_PUBLIC_API_BASE_URL=http://localhost:3000/api  # Base URL for internal API
NEXT_PUBLIC_HISTORICAL_DATA_API=https://api.historydata.io  # External historical data source
NEXT_PUBLIC_ANALYTICS_KEY=abc123xyz   # Analytics tracking ID (e.g., Google Analytics)

# Simulation Configuration
NEXT_PUBLIC_TIMELINE_BASE_YEAR=1800    # Starting year of timeline
NEXT_PUBLIC_TIMELINE_YEAR_RANGE=50     # Number of years in timeline
NEXT_PUBLIC_PIXELS_PER_YEAR=4          # Pixels per year for scaling
NEXT_PUBLIC_DEFAULT_DECAY_FACTOR=20    # Half-life for effect decay (years)
NEXT_PUBLIC_MAX_IMPACT_VALUE=200       # Maximum impact value
NEXT_PUBLIC_MIN_IMPACT_VALUE=0         # Minimum impact value

# Security (do not commit to VCS - use .env.local or secrets manager)
API_KEY=your-secret-api-key            # General API key (server-side only)
NEXT_PUBLIC_TEMPORAL_TOKEN=xyz789      # Public token for temporal services (if applicable)

# Development Settings
NEXT_PUBLIC_LOG_LEVEL=debug            # Log level: debug, info, warn, error
